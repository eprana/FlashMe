<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarStyle">@style/actionBar</item>
    </style>
    
    <!-- ActionBar -->
    <style name="actionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/dark_topline</item>
        <item name="android:backgroundStacked">@drawable/light_topline</item>
        <item name="android:titleTextStyle">@style/actionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="actionBarTitleText" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/small_tx</item>
    </style>
    
    
    <style name="translucide">
		<item name="android:background">@color/translucide</item>
	</style>
	
    <style name="dark_blue">
        <item name="android:textColor">@color/dark_blue</item>
    </style>
    
    <style name="middle_blue">
        <item name="android:textColor">@color/middle_blue</item>
    </style>
    
    <style name="white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="gray">
        <item name="android:textColor">@color/gray</item>
    </style>
    
    <style name="topMenu">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_tx</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/topLineLight_wd</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dark_topline</item>
    </style>
    
    <style name="topLine">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_tx</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/topLineLight_wd</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/dark_blue</item>
    </style>
    
    <style name="topLineButton">
        <item name="android:background">@color/translucide</item>
        <item name="android:layout_marginTop">@dimen/medium_mg</item>
        <item name="android:layout_marginLeft">@dimen/medium_mg</item>
    </style>
    
    <style name="topLineLight">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/light_blue</item>
        <item name="android:textSize">@dimen/large_tx</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">10sp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="whiteOnBlue">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/dark_blue</item>
    </style>
    
    <style name="buttonWhite">
    	<item name="android:textColor">@color/dark_blue</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">@dimen/verysmall_wd</item>
        <item name="android:textSize">@dimen/medium_tx</item>
    </style>
    
    <style name="buttonLightBlue">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/verysmall_wd</item>
        <item name="android:textSize">@dimen/medium_tx</item>
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:layout_centerVertical">true</item>
        <item name="android:shadowColor">@color/gray</item>
    	<item name="android:shadowDx">1</item>
  		<item name="android:shadowDy">1</item>
    	<item name="android:shadowRadius">2</item>
    	<item name="android:background">@drawable/light_button</item>
    </style>    
    
    <style name="buttonDarkBlue">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/verysmall_wd</item>
        <item name="android:textSize">@dimen/medium_tx</item>
        <item name="android:layout_centerHorizontal">true</item>
		<item name="android:layout_centerVertical">true</item>
        <item name="android:shadowColor">@color/black</item>
    	<item name="android:shadowDx">1</item>
  		<item name="android:shadowDy">1</item>
    	<item name="android:shadowRadius">2</item>
    	<item name="android:background">@drawable/dark_button</item>
    	
    </style>    
    
    <style name="completed">
        <item name="android:text">.</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:background">@color/dark_blue</item>
        <item name="android:layout_height">@dimen/verysmall_wd</item>
        <item name="android:textSize">@dimen/medium_tx</item>
    </style>
    
    <style name="waiting">
        <item name="android:text">.</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@color/gray</item>
        <item name="android:textSize">@dimen/medium_tx</item>
    </style>
    
</resources>