<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#a0d5f2" />
            <stroke
                android:width="@dimen/line_mg"
                android:color="@color/middle_blue" />
            <corners
                android:radius="@dimen/verysmall_mg" />
            <padding
                android:left="@dimen/verysmall_mg"
                android:top="@dimen/verysmall_mg"
                android:right="@dimen/verysmall_mg"
                android:bottom="@dimen/verysmall_mg" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/light_blue"
                android:endColor="@color/middle_blue"
                android:angle="270" />
            <stroke
                android:width="@dimen/line_mg"
                android:color="@color/middle_blue" />
            <corners
                android:radius="@dimen/verysmall_mg" />
            <padding
                android:left="@dimen/verysmall_mg"
                android:top="@dimen/verysmall_mg"
                android:right="@dimen/verysmall_mg"
                android:bottom="@dimen/verysmall_mg" />
        </shape>
    </item>
</selector>