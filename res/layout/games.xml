<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
	    android:id="@+id/top_line_light"
	    android:text="@string/my_games"
	    style="@style/topLineLight" />
        
    <LinearLayout 
        android:id="@+id/create_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:orientation="horizontal" >
	    
	     <EditText
		    android:id="@+id/enter_game"
		    android:layout_width="@dimen/button_wd"
		    android:layout_height="wrap_content"
		    android:layout_margin="@dimen/medium_mg"
		    android:hint="@string/enter_game"
		    android:inputType="text" />
	     
	     <Button
		    android:id="@+id/create_game"
		    style="@style/buttonLightBlue"
		    android:layout_width="@dimen/medium_wd"
		    android:layout_marginTop="@dimen/small_mg"
		    android:background="@drawable/light_button"
		    android:text="@string/create" />
	</LinearLayout>
    
    
	<RelativeLayout 
	    android:id="@+id/parent_layout"
	    android:layout_width="match_parent"
	    android:layout_height="0dip" 
	    android:layout_weight="20">
    	    	     
		<ListView 
		    android:id="@+id/games_list" 
		    android:groupIndicator="@drawable/group_indicator"
			android:layout_marginTop="@dimen/medium_mg"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent" >
		</ListView>
		
		<ProgressBar
	        android:id="@+id/progressBar"
	        style="@android:style/Widget.ProgressBar.Large"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true" />

	</RelativeLayout>

	<LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_gravity="center" 
        android:layout_weight="1">
        
	    <Button
		    android:id="@+id/play"    
		    android:layout_width="@dimen/medium_wd"
		    android:text="@string/play"
		    android:background="@drawable/dark_button"
		    style="@style/buttonDarkBlue" 
		    android:layout_margin="@dimen/large_mg"/>
	                
    </LinearLayout>
    
</LinearLayout>