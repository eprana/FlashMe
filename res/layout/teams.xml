<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/fragment_header"
	    style="@style/header" >

        <ImageButton
            android:id="@+id/back_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@string/back_bt"
            android:focusable="false"
            android:src="@drawable/back_bt"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/top_line_light"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="14.5sp"
            android:layout_weight="0.50"
            android:gravity="center"
            android:text="@string/my_teams"
            android:textColor="@color/white"
            android:textSize="@dimen/large_tx" />
        
	    <ImageButton
            android:id="@+id/refresh_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14.5sp"
            android:background="@null"
            android:contentDescription="@string/refresh_bt"
            android:focusable="false"
            android:src="@drawable/refresh_bt" />
	    
	</LinearLayout>
    
    <LinearLayout 
        android:id="@+id/create_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:orientation="horizontal" >
	    
    	 <EditText
		    android:id="@+id/enter_team"
		    android:layout_width="@dimen/button_wd"
		    android:layout_height="wrap_content"
		    android:layout_margin="@dimen/medium_mg"
		    android:hint="@string/enter_team"
		    android:inputType="text" />
    	 
    	 <AutoCompleteTextView 
		    android:id="@+id/autocomplete_player"
		    android:layout_width="@dimen/button_wd"
		    android:layout_height="wrap_content"
		    android:layout_margin="@dimen/medium_mg"
		    android:hint="@string/enter_player_auto"
		    android:visibility="gone"/>
	     
	     <Button
		    android:id="@+id/create_team"
		    android:layout_width="@dimen/medium_wd"
		    android:layout_marginTop="@dimen/small_mg"
		    android:text="@string/create"
		    android:background="@drawable/light_button"
		    style="@style/buttonLightBlue" />
	     
	</LinearLayout>
    
	<RelativeLayout
	    android:id="@+id/parent_layout"
	    android:layout_width="match_parent"
	    android:layout_height="0dip" 
	    android:layout_weight="20">
	    
		<ListView 
		    android:id="@android:id/list"
		    android:layout_marginTop="@dimen/medium_mg"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent" >
		</ListView>
	
		<ProgressBar
	        android:id="@+id/progressBar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true" />
	   
		
	</RelativeLayout>
	
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_gravity="center" 
        android:layout_weight="5">
        
	    <Button
		    android:id="@+id/play"    
		    android:layout_width="@dimen/medium_wd"
		    android:text="@string/play"
		    android:background="@drawable/dark_button"
		    style="@style/buttonDarkBlue" 
		    android:layout_margin="@dimen/large_mg"/>
	                
    </LinearLayout>

</LinearLayout>