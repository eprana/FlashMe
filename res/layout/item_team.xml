<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<TextView 
        android:id="@+id/team_state"
        android:layout_height="@dimen/small_wd"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/medium_mg"
        style="@style/team_waiting" />
     
     <TextView 
        android:id="@+id/team_name"
        android:layout_height="wrap_content"
        android:layout_width="@dimen/large_wd"
        android:layout_toRightOf="@id/team_state"
        android:layout_marginTop="@dimen/medium_mg"
        android:layout_marginLeft="@dimen/small_mg"
        android:textSize="@dimen/medium_tx" 
        style="@style/blue" />
     
     <TextView 
        android:id="@+id/team_creator"
        android:layout_toRightOf="@id/team_state"
        android:layout_below="@id/team_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/medium_mg"
        android:layout_marginTop="@dimen/verysmall_mg"
        android:textSize="@dimen/small_tx" />
     
	<ImageButton 
	    android:id="@+id/team_delete"
	    android:layout_toRightOf="@id/team_name"
	    android:layout_width="@dimen/small_wd"
	    android:layout_height="@dimen/small_wd"
		android:contentDescription="@string/delete"
		android:src="@drawable/delete_bt"
		android:layout_marginTop="@dimen/medium_mg"
		style="@style/translucide"/>

</RelativeLayout>